<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessDep"
    android:orientation="vertical"
    android:background="@drawable/businessdep"
    >


    <Button
        android:id="@+id/businesschariman"
        android:layout_width="337dp"
        android:layout_height="59dp"
        android:layout_marginTop="316dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/businesswebsite"
        android:layout_width="342dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businesschariman" />

    <Button
        android:id="@+id/businessfacebook"
        android:layout_width="343dp"
        android:layout_height="68dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businesswebsite" />

    <Button
        android:id="@+id/businessvideo"
        android:layout_width="349dp"
        android:layout_height="72dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessfacebook" />

</androidx.constraintlayout.widget.ConstraintLayout>